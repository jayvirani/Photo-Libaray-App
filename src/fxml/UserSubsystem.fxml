<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserController">
   <top>
      <AnchorPane prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="title" layoutX="12.0" layoutY="14.0" text="User Dashboard">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Button fx:id="logOut" layoutX="414.0" layoutY="15.0" mnemonicParsing="false" onAction="#handleLogOutButton" text="Log out" />
            <Button fx:id="add" layoutX="12.0" layoutY="81.0" mnemonicParsing="false" onAction="#handleAddAlbumButton" text="Add album" />
            <Button fx:id="delete" layoutX="97.0" layoutY="81.0" mnemonicParsing="false" onAction="#handleDeleteAlbumButton" text="Delete album" />
            <TextField fx:id="albumField" layoutX="97.0" layoutY="45.0" prefHeight="25.0" prefWidth="250.0" />
            <Button fx:id="cancel" layoutX="419.0" layoutY="45.0" mnemonicParsing="false" onAction="#handleCancelButton" text="Cancel" />
            <Button fx:id="confirm" layoutX="355.0" layoutY="45.0" mnemonicParsing="false" onAction="#handleConfirmButton" text="Confirm" />
            <Button fx:id="renameAlbum" layoutX="375.0" layoutY="81.0" mnemonicParsing="false" onAction="#handleRenameButton" text="Rename album" />
            <Label layoutX="12.0" layoutY="49.0" text="Album name:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Button fx:id="open" layoutX="289.0" layoutY="81.0" mnemonicParsing="false" onAction="#handleOpenAlbumButton" text="Open album" />
            <Button fx:id="search" layoutX="191.0" layoutY="81.0" mnemonicParsing="false" onAction="#handlesearchPhotosButton" text="Search Photos" />
            <ListView fx:id="albums" layoutX="38.0" layoutY="154.0" prefHeight="415.0" prefWidth="727.0" />
         </children>
      </AnchorPane>
   </top>
</BorderPane>
